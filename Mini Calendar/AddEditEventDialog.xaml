<Window x:Class="Mini_Calendar.AddEditEventDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_Calendar"
        mc:Ignorable="d"
        Title="Add Event" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label>Event Title:</Label>
        <TextBox x:Name="titleTextBox"/>

        <Label>Event Date:</Label>
        <DatePicker x:Name="datePicker"/>

        <Label>Description:</Label>
        <TextBox x:Name="descriptionTextBox"/>

        <Button x:Name="btnSaveEvent" Content="Add Event" Click="SaveEvent_Click" Margin="10"/>
    </StackPanel>
</Window>
